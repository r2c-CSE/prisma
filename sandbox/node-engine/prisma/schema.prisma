generator client {
  provider        = "prisma-client-js"
  output          = "../generated-client"
  previewFeatures = ["driverAdapters"]
  // engineType      = "node"
}

datasource db {
  // provider = "sqlite"
  // url      = "file:./dev.db"
  provider = "postgresql"
  url      = "postgres://prisma:prisma@localhost:5432/tests"
}

model Link {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  url       String
  shortUrl  String
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  name      String?   @map("fullname")
  email     String    @unique
  links     Link[]
  date      DateTime?
  decimal   Decimal?
}
